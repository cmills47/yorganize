<!-- Project -->
<div id="header-zone" class="tidate b-lblue" style="cursor: pointer; margin-left: <%= ident %>px;">
    <div>
        <a id="edit-project" href="#"><%= Position %> &nbsp;<%= Name %></a>
        <div id="expand-arrow" class="pull-right" style="cursor: default">
            <% if (expanded) { %>
                <i class="icon-chevron-up"></i>
            <% } else { %>
                <i class="icon-chevron-down"></i>
            <% } %>
        </div>
    </div>

    <div class="tisub">
        <span class="remaining">2 remaining</span> &nbsp; <span class="due">1 due soon</span> &nbsp; <span class="overdue">1 overdue</span>
    </div>
</div>

<!-- Actions -->
<div id="actions-zone" class="timatter">
    <div id="actions"></div>
    <div class="span12 action">
        <img src="~/Content/icons/actions/small-newaction.png" />
        <a id="new-action" href="#">New Action</a>
    </div>

    <!-- Actions END -->
    <div class="clearfix"></div>
</div>
<!-- Project END -->
