<!-- Folders -->
<div id="header-zone" class="tidate b-blue" style="cursor: pointer; margin-left: <%= ident %>px;">
    <div>
        <a id="edit-folder" href="#"><%= Position %> &nbsp;<%= Name %></a>
        <div id="expand-arrow" class="pull-right" style="cursor: default">
            <% if (expanded) { %>
            <i id="expand" class="icon-chevron-up"></i>
            <% } else { %>
            <i id="expand" class="icon-chevron-down"></i>
            <% } %>
        </div>
    </div>

    <div class="tisub">
        <span class="remaining">2 remaining</span> &nbsp; <span class="due">1 due soon</span> &nbsp; <span class="overdue">1 overdue</span>
        <div class="pull-right">
            <i class="icon-folder-open"></i>New Folder
            <i class="icon-folder-close"></i>New Project
        </div>
    </div>
</div>

<!-- Empty folder zone -->
<div id="empty-zone" class="timatter hide">
    <br/>
    <!-- Empty zone END -->
    <div class="clearfix"></div>
</div>

<!-- Folder END -->
