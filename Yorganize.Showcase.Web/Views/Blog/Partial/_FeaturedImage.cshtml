@model Yorganize.Showcase.Web.Models.BlogPostModel

<!-- If post exists (not new) -->
@if (!Model.IsNew)
{
    <!-- Image -->
    <div class="span7">
        <div class="row">
            <h4>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <a id="remove-featured-image" href="#" class="btn btn-mini">Remove</a>
                    <i id="spinner-remove-featured-image" class="icon-cog icon-spin hidden"></i>
                }
                Featured image
            </h4>
        </div>
    </div>
    
    <div class="span4">
        <div class="row">
            @if (!string.IsNullOrEmpty(@Model.ImageUrl))
            {
                <img id="featured-image-preview" src="@Url.Content(Model.ThumbnailUrl)" class="media-object img-polaroid" />
            }
        </div>
    </div>
    <div class="span3">
        Please select a featured image...
                            <i id="spinner-upload" class="icon-cog icon-spin icon-2x hidden"></i>
        <input name="files" id="files" type="file" accept="image/*" />
        <br />
        <div class="span3">
            <div class="row">
                @Html.HiddenFor(m => m.ImageUrl, new { id = "featured-image" })
                <img id="preview-image" src="" alt="Preview" class="media-object img-polaroid hidden" style="width: 100%;" />
            </div>
            <!-- Preview image -->

        </div>

    </div>
}
else // If post is new hide the upload controls -->
{
    <p class="lead">Please save the post first to set a featured image.</p>
}